# Environment Configuration
ENV=development
PORT=3000
API_VERSION=v1

# Database Configuration (REQUIRED)
DATABASE_URL=postgresql://username:password@localhost:5432/workbench
DATABASE_READ_URL=postgresql://username:password@localhost:5432/workbench

# Redis Configuration
REDIS_CLUSTER_URLS=redis://localhost:6379
REDIS_PASSWORD=

# JWT Configuration (REQUIRED)
JWT_SECRET=your-jwt-secret-key-change-this
JWT_REFRESH_SECRET=your-jwt-refresh-secret-key-change-this
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Bcrypt Configuration
BCRYPT_ROUNDS=12

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# Logging Configuration
LOG_LEVEL=info

# Response Encryption Configuration
RESPONSE_ENCRYPTION_KEY=workbench-default-32-char-key-1234